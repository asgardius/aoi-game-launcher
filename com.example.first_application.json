        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        {
            "name": "first-application",
            "buildsystem": "meson",
            "builddir": true,
            "subdir": "First_Application",
            "sources": [
                {
                    "branch": "master",
                    "type": "git",
                    "url": "https://source.puri.sm/david.boddie/tutorials.git"
                }
            ]
        }
    ]
