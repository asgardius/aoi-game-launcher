{
    "app-id": "com.example.first_application",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "your-first-application",
    "finish-args": [
        "--socket=wayland"
    ],
    "build-options": {
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
